<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/toolbar"></include>

   <android.support.v4.widget.NestedScrollView
       android:layout_marginTop="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:background="@color/mainLayout_backGround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/imageslider"></include>

        <android.support.v7.widget.RecyclerView

            android:id="@+id/first_layout_recyclerView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include layout="@layout/amazing"></include>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/first_layout_wonderful_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>


      <include layout="@layout/tabligh_layout"></include>




    </LinearLayout>



</android.support.v4.widget.NestedScrollView>

    </RelativeLayout>


