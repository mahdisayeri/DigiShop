<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainLayout_backGround"
    >

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FinalProduct">

    <include layout="@layout/toolbar_white"></include>

    <include layout="@layout/imagesliderproduct"></include>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/final_product_share"
            android:layout_margin="10dp"
            android:src="@drawable/ic_share_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/final_product_favorite"
            android:layout_margin="10dp"
            android:src="@drawable/ic_favorite_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/styleforwhitebackgrond"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/final_product_mainTitle"
        android:padding="5dp"
        android:textSize="18sp"
        android:text="عنوان اصلی"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:id="@+id/final_product_subTitle"
        android:textSize="14sp"
        android:text="جزعیات"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>


    <include layout="@layout/amazing"></include>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/final_product_commentUser"
            android:background="@drawable/styleforwhitebackgrond"
            android:layout_margin="10dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
           android:drawableRight="@drawable/ic_comment_black_24dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="نظرات کاربران"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/final_product_details"
            android:background="@drawable/styleforwhitebackgrond"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_description_black_24dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="مشخصات"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/final_product_call"
        android:background="@drawable/styleforwhitebackgrond"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/greenBackGround"
        android:textSize="18sp"
        android:text="تماس بگیرید"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/final_product_presentation"
        android:background="@drawable/styleforwhitebackgrond"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="معرفی برند : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/styleforwhitebackgrond"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/final_product_ratingBar"
            style = "?android:attr/ratingBarStyleIndicator"
            android:numStars = "5"
            android:rating   = "4.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/final_product_text_ratingBar"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="امتیاز محصول : 4.7 از 5" />


    </LinearLayout>



</LinearLayout>

</android.support.v4.widget.NestedScrollView>